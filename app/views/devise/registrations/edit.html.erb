<body class="text-center">

<h2 class=""><%= t("devise.registrations.edit.title") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row justify-content-center">
    <%= f.email_field :email, {autofocus: true, autocomplete: "email",
                               :class=>"col-3 mb-3 form-control",
                               :placeholder=>t("devise.registrations.edit.email")} %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t("devise.registrations.edit.not_confirm") %><%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="row justify-content-center"">
  <!--    <%#= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />-->
  <%= f.password_field :password, {autocomplete: "current-password",
                                   :class=>"mb-3 col-3 form-control",
                                   :placeholder => t("devise.registrations.edit.current_password")}%>
  </div>
  <div class="row justify-content-center"">
  <%= f.password_field :password, {autocomplete: "new-password",
                                   :class=>"mb-3 col-3 form-control",
                                   :placeholder => t("devise.registrations.edit.new_password")}%>
  <%# if @minimum_password_length %>
  <!--      <br />-->
  <!--      <em><%#= @minimum_password_length %> characters minimum</em>-->
  <%# end %>
  </div>
  <div class="row justify-content-center"">
  <%= f.password_field :password_confirmation, {autocomplete: "new-password",
                                                :class=>"mb-3 col-3 form-control",
                                                :placeholder => t("devise.registrations.edit.confirm_password")}%>
  </div>



  <div >
    <%= f.submit t("devise.registrations.edit.submit"),:class=>"btn btn-success" %>
  </div>
<% end %>

<h3><% t("devise.registrations.edit.cancel_account") %></h3>

<p><%= t("devise.registrations.edit.unhappy") %>
  <%= button_to t("devise.registrations.edit.cancel_account"), registration_path(resource_name),
                data: { confirm: t("devise.registrations.edit.confirm") }, method: :delete %></p>

<%= link_to t("devise.registrations.edit.back"), :back %>
</body>