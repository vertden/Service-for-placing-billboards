<body>
<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col"><%= t("admin.users.full_name") %></th>
    <th scope="col"><%= t("admin.users.email") %></th>
    <th scope="col"><%= t("admin.users.admin") %></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr id="user">
      <td>
        <%= user.first_name %>
        <%= user.second_name %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.admin %>
      </td>
      <td>
        <%= link_to t("admin.users.appoint_admin"), appoint_admin_admin_path(:user_id => user.id),method: :patch %>
      </td>
      <td>
        <%= link_to t("admin.users.remove_admin"), remove_admin_admin_path(:user_id => user.id),method: :patch %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</body>